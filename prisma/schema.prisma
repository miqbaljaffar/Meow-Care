// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk Pengguna
model User {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  kucing  Kucing[]
  artikel Artikel[] 
}

// Model untuk Kucing
model Kucing {
  id        Int      @id @default(autoincrement())
  nama      String
  spesies   String
  umur      Int
  pemilik   User     @relation(fields: [pemilikId], references: [id])
  pemilikId Int

  riwayat RiwayatLayanan[]
}

// Model untuk Riwayat Layanan
model RiwayatLayanan {
  id           Int      @id @default(autoincrement())
  kucing       Kucing   @relation(fields: [kucingId], references: [id])
  kucingId     Int
  jenisLayanan String
  catatan      String?
  tanggal      DateTime @default(now())
}


model Antrian {
  id            Int      @id @default(autoincrement())
  namaPemilik   String
  namaKucing    String
  nomorTelepon  String
  jenisLayanan  String
  nomorAntrian  Int      @unique
  status        String   @default("Menunggu")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Artikel {
  id          Int      @id @default(autoincrement())
  slug        String   @unique // Untuk URL yang rapi, cth: /blog/cara-merawat-kucing
  judul       String
  konten      String   // Konten artikel dalam format Markdown
  kutipan     String   // Kutipan singkat untuk ditampilkan di daftar artikel
  gambar      String?  // URL gambar utama (opsional)
  status      String   @default("draf") // "draf" atau "terbit"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  penulis     User     @relation(fields: [penulisId], references: [id])
  penulisId   Int
}